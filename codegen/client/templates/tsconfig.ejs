{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"target": "es2019",
		"lib": ["es2019"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"esModuleInterop": true,
		"removeComments": true,
		"noImplicitAny": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "lib",
		"suppressImplicitAnyIndexErrors": true,
		"types": ["node"],
		"strict": true
	},
	"include": ["src/**/*.ts"]
}
